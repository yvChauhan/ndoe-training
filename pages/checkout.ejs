<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navigation.ejs') %>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-xl-12 gap-1">
            <% data.forEach(entry => { %>
              <div class="card border shadow-none mb-2">
                <div class="card-body">
                  <div class="d-flex align-item-start border-bottom pb-3">
                      <div class="me-4">
                        <img src="<%= entry.image %>" alt="" class="avatar-lg rounded checkout__image">
                      </div>
                      <div class="flex-grow-1 align-self-center overflow-hidden">
                        <div>
                          <h5 class="text-truncate font-size-18">
                             <a href="#" class="text-dark"><%= entry.title %></a>
                          </h5>
                          <p class="text-muted mb-0">
                            <% for( let index = 0; index < entry.rating.rate; index++ ) { %>
                              <i class="fa fa-star" aria-hidden="true"></i>
                            <% } %>
                          </p>
                          <p class="mb-0 mt-1">Stock</p>
                        </div>
                      </div>
                      <div class="flex-shrink-0 ms-2">
                        <ul class="list-inline mb-0 font-size-16">
                          <li class="list-inline-item">
                            <a href="#" class="text-muted px-1">
                              <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                          </li>
                          <li class="list-inline-item">
                            <a href="#" class="text-muted px-1">
                              <i class="fa fa-heart-o" aria-hidden="true"></i>
                            </a>
                          </li>
                        </ul>
                      </div>
                  </div>
                  <div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="mt-3">
                          <p class="text-muted  mb-2">Price</p>
                          <h5 class="mb-0 mt-2">
                            <span class="text-muted me-2">
                              <del class="font-size-16 fw-normal"> <%= entry.price %></del>
                              <%= entry.offerPrice %>
                            </span>
                          </h5>
                        </div>
                      </div>
                      <div class="col-md-5">
                        <div class="mt-3">
                          <p class="text-muted  mb-2">Quantity</p>
                          <div class="inline-flex">
                            <%= entry.quantity %>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="mt-3">
                          <p class="text-muted mb-2">Total</p>
                          <h5 class="mb-0 mt-2">
                            <%= entry.price %>
                          </h5>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
